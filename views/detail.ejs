<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2> Detail Contact</h2>
            <!-- Condition -->
            <% if (!contact) { %>
                <div class="alert alert-danger" role="alert">
                    Contact Not Found <a href="/contact" class="alert-link">Back To Contacts</a>
                  </div>
            <% } else { %>
            <!-- Card -->
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title"><%= contact.nama %></h5>
                  <h6 class="card-subtitle mb-2 text-body-secondary"><%= contact.nohp %></h6>
                  <p class="card-text"><%= contact.email %></p>
                  <a href="/contact/edit/<%= contact.nama %>" class="btn btn-info  badge">Ubah</a>
                  <a href="/contact/delete/<%= contact.nama %>" class="btn btn-danger  badge"
                    onclick="return confirm('yakin?');" >Hapus</a>
                  <a href="/contact" class="card-link d-block mt-3 ">Back</a>
                </div>
              </div>
              <% } %>
        </div>
    </div>
</div>
